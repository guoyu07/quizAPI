<hibernate-configuration xmlns="http://www.hibernate.org/xsd/hibernate-configuration">
    <session-factory>
        <!-- Database connection settings -->
        <property name="connection.driver_class">org.h2.Driver</property>
        <property name="connection.url">jdbc:h2:./data/quizapp</property>

        <!-- sql dialect  -->
        <property name="dialect">org.hibernate.dialect.H2Dialect</property>

        <!-- create the database schema on start up  -->
        <property name="hbm2ddl.auto">create</property>

        <!-- names the annotated entity classes -->
        <mapping class="com.group15.category.Category" />
        <mapping class="com.group15.question.Question" />
        <mapping class="com.group15.answer.Answer" />
        <mapping class="com.group15.user.User" />

    </session-factory>
</hibernate-configuration>